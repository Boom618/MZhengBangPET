<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <View
        android:id="@+id/line"
        android:layout_width="2dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:background="@color/theme_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_other_messages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_10"
        android:text="@string/other_message"
        android:textColor="@color/black"
        android:textSize="@dimen/text_18"
        app:layout_constraintBottom_toBottomOf="@+id/line"
        app:layout_constraintStart_toEndOf="@id/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:background="@drawable/shape_white_min_radius"
        app:layout_constraintTop_toBottomOf="@+id/tv_other_messages">

        <TextView
            android:id="@+id/tv_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:background="@drawable/shape_black_min_radius"
            android:drawableStart="@mipmap/ic_date"
            android:drawableEnd="@mipmap/ic_bottom"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:padding="@dimen/space_7"
            android:text="路径：如"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_path"
            android:layout_margin="@dimen/space_6"
            android:background="@drawable/shape_black_min_radius"
            android:drawableStart="@mipmap/ic_date"
            android:drawableEnd="@mipmap/ic_bottom"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:padding="@dimen/space_7"
            android:text="移动类型：如101"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_type"
            android:layout_margin="@dimen/space_6"
            android:background="@drawable/shape_black_min_radius"
            android:drawableStart="@mipmap/ic_date"
            android:drawableEnd="@mipmap/ic_bottom"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:padding="@dimen/space_7"
            android:text="2018-08-31 14:18"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />


        <EditText
            android:id="@+id/et_desc"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/tv_time"
            android:layout_marginStart="@dimen/space_10"
            android:layout_marginEnd="@dimen/space_10"
            android:background="@drawable/shape_gray_min_radius"
            android:gravity="top"
            android:hint="备注"
            android:padding="@dimen/space_7"
            android:textColor="@color/txt_minor_color"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_14" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>