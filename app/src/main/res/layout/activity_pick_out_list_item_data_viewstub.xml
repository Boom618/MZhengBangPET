<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tv_box_num"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_20"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toTopOf="@+id/et_bulk_num"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/bulk_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:padding="@dimen/space_5"
        android:text="入库数量："
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_box_num" />

    <EditText
        android:id="@+id/et_bulk_num"
        android:layout_width="196dp"
        android:layout_height="39dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:hint="00"
        android:inputType="text"
        android:lines="1"
        android:textColor="@color/txt_main_color"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/bulk_num"
        app:layout_constraintTop_toBottomOf="@+id/tv_box_num" />


    <EditText
        android:id="@+id/et_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bulk_code"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="8dp"
        android:ellipsize="end"
        android:hint="库位码"
        android:inputType="text"
        android:lines="1"
        android:padding="@dimen/space_5"
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toTopOf="@+id/et_batch_no"
        app:layout_constraintEnd_toStartOf="@+id/iv_del_code"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_bulk_num" />

    <ImageView
        android:id="@+id/iv_del_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/bulk_code"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/et_code"
        android:src="@mipmap/delete"
        app:layout_constraintBottom_toTopOf="@+id/et_batch_no"
        app:layout_constraintStart_toEndOf="@id/et_code"
        app:layout_constraintTop_toBottomOf="@+id/et_bulk_num"
        tools:layout_editor_absoluteX="313dp"
        tools:layout_editor_absoluteY="75dp" />

    <EditText
        android:id="@+id/et_batch_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_code"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:hint="sap 物料批次号"
        android:inputType="text"
        android:lines="1"
        android:padding="@dimen/space_5"
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_code" />


</androidx.constraintlayout.widget.ConstraintLayout>