<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/top"
        layout="@layout/top_layout" />

    <Button
        android:id="@+id/source_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_marginStart="@dimen/space_40"
        android:layout_marginEnd="@dimen/space_40"
        android:background="@drawable/shape_btn_them"
        android:text="源库位"
        android:textColor="@color/white"
        android:textSize="@dimen/text_22"
        app:layout_constraintBottom_toTopOf="@+id/target_location"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top" />

    <Button
        android:id="@+id/target_location"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_marginStart="@dimen/space_40"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginEnd="@dimen/space_40"
        android:background="@drawable/shape_btn_them"
        android:text="目标库位"
        android:textColor="@color/white"
        android:textSize="@dimen/text_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/source_location" />

</androidx.constraintlayout.widget.ConstraintLayout>