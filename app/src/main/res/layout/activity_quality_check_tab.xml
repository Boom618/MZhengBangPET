<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_layout" />
    <!--android:drawableStart="@mipmap/ic_search"-->
    <!--android:drawablePadding="@dimen/space_10"-->
    <EditText
        android:id="@+id/et_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/top_layout"
        android:layout_margin="@dimen/space_10"
        android:layout_toStartOf="@+id/stl"
        android:background="@drawable/shape_white_max_radius"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        android:hint="请输入单号"
        android:padding="@dimen/space_7"
        android:textColor="@color/txt_minor_color"
        android:textSize="@dimen/text_14" />


    <com.flyco.tablayout.SegmentTabLayout
        android:id="@+id/stl"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_below="@+id/top_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="@dimen/space_13"
        tl:tl_indicator_anim_enable="true"
        tl:tl_indicator_bounce_enable="false"
        tl:tl_indicator_color="@color/main_color"
        tl:tl_indicator_corner_radius="@dimen/space_4"
        tl:tl_tab_padding="14dp"
        tl:tl_textUnselectColor="@color/txt_main_color" />


    <LinearLayout
        android:id="@+id/layout_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_search"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_time_left"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:layout_weight="1"
            android:background="@drawable/shape_black_min_radius"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/space_5"
            android:text="2018-08-31"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tv_time_right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_6"
            android:layout_weight="1"
            android:background="@drawable/shape_black_min_radius"
            android:gravity="center_vertical|center_horizontal"
            android:padding="@dimen/space_5"
            android:text="2019-01-31"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />


    </LinearLayout>

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layout_time" />


</RelativeLayout>