<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_white_min_radius">


    <TextView
        android:id="@+id/tv_document_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="子单号：6789876"
        style="@style/reversalList"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_material_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="原辅料名称：汇5"
        style="@style/reversalList"
        app:layout_constraintTop_toBottomOf="@+id/tv_document_no"/>

    <TextView
        android:id="@+id/tv_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="入库数量：5"
        style="@style/reversalList"
        app:layout_constraintTop_toBottomOf="@+id/tv_material_name"/>

    <CheckBox
        android:id="@+id/check"
        android:layout_marginEnd="@dimen/space_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_number"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_solubility"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="含量：22%"
        style="@style/reversalList"
        app:layout_constraintTop_toBottomOf="@+id/tv_number"/>

    <TextView
        android:id="@+id/tv_batch_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SAP 批次号：34567876543456"
        style="@style/reversalList"
        app:layout_constraintTop_toBottomOf="@+id/tv_solubility"/>

</android.support.constraint.ConstraintLayout>