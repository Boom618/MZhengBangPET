<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rv_in_storage_detail"
    android:layout_marginStart="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    android:background="@drawable/shape_white_min_radius"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10">

        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_product" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_5"
            android:layout_toEndOf="@id/iv_tag"
            android:ellipsize="end"
            android:maxEms="10"
            android:maxLines="1"
            android:text="联想台式电脑"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_collapse" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_15"
            android:layout_toStartOf="@+id/iv_arrow"
            android:text="25箱"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_10"
        android:paddingEnd="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_houseNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_marginBottom="@dimen/x10"
            android:text="@string/warehouse_no"
            android:textSize="@dimen/text_16" />

        <TextView
            android:id="@+id/tv_invisible_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:text="111" />

        <TextView
            android:id="@+id/text_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_houseNo"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_marginTop="4dp"
            android:text="单位："
            android:textSize="@dimen/text_16" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_houseNo"
            android:layout_toEndOf="@+id/text_unit"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="KG" />

            <RadioButton
                android:id="@+id/rb_zkg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ZKG" />

            <RadioButton
                android:id="@+id/rb_pc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="PC" />

        </RadioGroup>

        <TextView
            android:id="@+id/tv_select_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_alignEnd="@+id/et_batch_no"
            android:layout_marginTop="5dp"
            android:background="@drawable/shape_black_min_radius"
            android:drawableEnd="@mipmap/ic_bottom"
            android:gravity="center_vertical"
            android:padding="@dimen/space_7"
            android:text="选择订单"
            android:textColor="@color/txt_main_color" />

        <EditText
            android:id="@+id/et_code"
            style="@style/itemSizeStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_select_order"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_alignEnd="@+id/et_batch_no"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:hint="库位码"
            android:imeOptions="actionNext"
            android:lines="1" />

        <LinearLayout
            android:id="@+id/layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_code"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginEnd="@dimen/space_25"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/tv_box_num"
                style="@style/itemSizeStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:hint="含量"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:lines="1" />

            <EditText
                android:id="@+id/et_bulk_num"
                style="@style/itemSizeStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="入库数量 : 123"
                android:imeOptions="actionNext"
                android:inputType="numberDecimal"
                android:lines="1" />

        </LinearLayout>


        <EditText
            android:id="@+id/et_batch_no"
            style="@style/itemSizeStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginEnd="@dimen/space_25"
            android:hint="sap 物料批次号"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1" />

    </RelativeLayout>

</LinearLayout>