<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/rv_in_storage_detail"
    android:layout_marginStart="@dimen/space_10"
    android:layout_marginEnd="@dimen/space_10"
    android:background="@drawable/shape_white_min_radius"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_10">

        <!-- android:src="@mipmap/ic_product" -->
        <ImageView
            android:id="@+id/iv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_product"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/space_5"
            android:layout_toEndOf="@id/iv_tag"
            android:text="联想台式电脑"
            android:maxLines="1"
            android:maxEms="10"
            android:ellipsize="end"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_collapse" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/space_15"
            android:layout_toStartOf="@+id/iv_arrow"
            android:text="25箱"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_10"
        android:paddingEnd="@dimen/space_10"
        android:paddingBottom="@dimen/space_10"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_houseNo"
            android:text="@string/warehouse_no"
            android:textSize="@dimen/text_16"
            android:layout_marginBottom="@dimen/x10"
            android:layout_width="wrap_content"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/text_unit"
            android:text="单位："
            android:layout_below="@+id/tv_houseNo"
            android:layout_marginTop="4dp"
            android:layout_alignStart="@+id/et_batch_no"
            android:textSize="@dimen/text_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:orientation="horizontal"
            android:layout_below="@+id/tv_houseNo"
            android:layout_toEndOf="@+id/text_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rb_kg"
                android:text="KG"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_zkg"
                android:text="ZKG"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <RadioButton
                android:id="@+id/rb_pc"
                android:text="PC"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>


        <EditText
            android:id="@+id/tv_box_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_alignEnd="@+id/et_batch_no"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:hint="含量"
            android:lines="1"
            android:inputType="numberDecimal"
            android:imeOptions="actionNext"
            style="@style/itemSizeStyle"/>

        <EditText
            android:id="@+id/et_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_box_num"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_alignEnd="@+id/et_batch_no"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:hint="库位码"
            android:lines="1"
            android:imeOptions="actionNext"
            style="@style/itemSizeStyle"/>

        <EditText
            android:id="@+id/et_bulk_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_code"
            android:layout_alignStart="@+id/et_batch_no"
            android:layout_alignEnd="@+id/et_batch_no"
            android:hint="入库数量 : 123"
            android:inputType="number"
            android:lines="1"
            android:imeOptions="actionNext"
            style="@style/itemSizeStyle"/>

        <EditText
            android:id="@+id/et_batch_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_bulk_num"
            android:layout_marginStart="@dimen/x15"
            android:layout_marginTop="@dimen/space_5"
            android:layout_marginEnd="@dimen/space_25"
            android:hint="sap 物料批次号"
            android:inputType="text"
            android:lines="1"
            android:imeOptions="actionDone"
            style="@style/itemSizeStyle"/>

    </RelativeLayout>

</LinearLayout>