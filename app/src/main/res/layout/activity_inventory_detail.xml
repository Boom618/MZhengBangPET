<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".ui.activity.product.ProduceTodoDetailActivity">

    <include
        android:id="@+id/top_layout"
        layout="@layout/top_layout" />

    <RadioGroup
        android:id="@+id/rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/space_10"
        android:background="@drawable/shape_rb_bg"
        android:gravity="right"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_selector_bg"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="@dimen/space_5"
            android:paddingEnd="@dimen/space_10"
            android:paddingStart="@dimen/space_10"
            android:paddingTop="@dimen/space_5"
            android:text="原辅料"
            android:textColor="@drawable/rb_txt_selector_black2white" />

        <RadioButton
            android:id="@+id/rb_weather"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rb_selector_bg"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="@dimen/space_5"
            android:paddingEnd="@dimen/space_10"
            android:paddingStart="@dimen/space_10"
            android:paddingTop="@dimen/space_5"
            android:text="成品"
            android:textColor="@drawable/rb_txt_selector_black2white" />

    </RadioGroup>


</LinearLayout>
