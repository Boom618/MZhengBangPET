<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <Button
        android:id="@+id/move_source"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_marginStart="@dimen/space_40"
        android:layout_marginEnd="@dimen/space_40"
        android:background="@drawable/shape_btn_them"
        android:text="移出原仓库"
        android:textColor="@color/white"
        android:textSize="@dimen/text_22"
        app:layout_constraintBottom_toTopOf="@+id/move_target"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/move_target"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x300"
        android:layout_marginStart="@dimen/space_40"
        android:layout_marginTop="@dimen/space_40"
        android:layout_marginEnd="@dimen/space_40"
        android:background="@drawable/shape_btn_them"
        android:text="移入目标仓库"
        android:textColor="@color/white"
        android:textSize="@dimen/text_22"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/move_source" />

</androidx.constraintlayout.widget.ConstraintLayout>