<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/id_top"
        layout="@layout/top_layout" />

    <TextView
        android:id="@+id/tv_old_pass"
        android:textColor="@color/txt_minor_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginTop="@dimen/space_8"
        android:text="原密码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_top" />

    <EditText
        android:id="@+id/old_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_old_pass" />

    <TextView
        android:id="@+id/tv_new_pass"
        android:textColor="@color/txt_minor_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:text="新密码"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/old_pass" />

    <EditText
        android:id="@+id/new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_pass" />

    <TextView
        android:id="@+id/tv_new_pass_again"
        android:textColor="@color/txt_minor_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:text="密码确认"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/new_pass" />

    <EditText
        android:id="@+id/new_pass_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_new_pass_again" />

    <Button
        android:id="@+id/pass_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/text_28"
        android:layout_marginStart="@dimen/text_28"
        android:layout_marginEnd="@dimen/text_28"
        android:background="@drawable/btn_login_selector"
        android:text="确认修改"
        android:textColor="@color/white"
        android:textSize="@dimen/text_18"
        app:layout_constraintTop_toBottomOf="@+id/new_pass_again" />

</androidx.constraintlayout.widget.ConstraintLayout>