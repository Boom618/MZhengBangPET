<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/ic_product"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/iv_tag"
        android:text="联想台式电脑"
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintStart_toEndOf="@+id/iv_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toStartOf="@+id/iv_arrow"
        android:text="25箱"
        android:textColor="@color/txt_main_color"
        android:textSize="@dimen/text_14"
        app:layout_constraintEnd_toStartOf="@+id/iv_arrow"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/ic_collapse"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <android.support.constraint.ConstraintLayout
        android:id="@+id/gone_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_num">

        <TextView
            android:id="@+id/tv_select_ware"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_28"
            android:background="@drawable/shape_black_min_radius"
            android:drawableStart="@mipmap/ic_date"
            android:drawableEnd="@mipmap/ic_bottom"
            android:drawablePadding="@dimen/space_10"
            android:gravity="center_vertical"
            android:padding="@dimen/space_7"
            android:text="正邦原料 1 号仓库"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/et_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_28"
            android:ellipsize="end"
            android:hint="出库数量：2000"
            android:lines="1"
            android:padding="@dimen/space_5"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14"
            app:layout_constraintBottom_toTopOf="@+id/et_batch_no"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_select_ware" />


        <TextView
            android:id="@+id/et_batch_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/text_28"
            android:layout_marginEnd="16dp"
            android:hint="sap 物料批次号"
            android:lines="1"
            android:padding="@dimen/space_5"
            android:textColor="@color/txt_main_color"
            android:textSize="@dimen/text_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/et_number" />


        <Button
            android:id="@+id/btn_binding_code"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_below="@+id/tv_box_num"
            android:layout_marginStart="@dimen/text_28"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginEnd="@dimen/text_28"
            android:layout_marginBottom="@dimen/space_10"
            android:background="@drawable/shape_theme_min_radius"
            android:text="箱码绑定"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_color"
            android:textSize="@dimen/text_16"
            app:layout_constraintTop_toBottomOf="@+id/et_batch_no" />


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>